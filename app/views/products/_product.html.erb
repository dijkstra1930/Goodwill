
  <div class="span5">
    <span class="pull-left product_name"><%= product.product_name %></span>
    <span class="pull-right product_price">$<%= product.product_price %></span>
    <% if product.image_uri %>
        <%= image_tag product.image_uri %>
    <% else %>
        <%= image_tag "480x300.gif" %>
    <% end %>
    <span class="timestamp">
    Posted <%= time_ago_in_words(product.created_at) %> ago.
  </span>

    <div>
      <span class="pull-left product_detail"><%= link_to 'View details', product %></span>
    <span class="pull-right product_delete">

    <% if current_user==product.user %>
        <%= link_to "delete", product, method: :delete,
                    data: {confirm: "You sure?"},
                    title: product.product_name %>
    <% end %>
    </span>
    </div>
    <br>
  </div>